<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 상단 고정 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/deep_red"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:contentDescription="메뉴 열기" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="홈"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/btn_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_notification"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:contentDescription="알림 보기" />
    </LinearLayout>

    <!-- 스크롤 가능한 콘텐츠 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <!-- 인사말 -->
            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="반갑습니다 \n 사업자 ID "
                android:textColor="@color/deep_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />



            <!-- 회사 선택 드롭다운 -->
            <Spinner
                android:id="@+id/spinner_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp" />

            <!-- 검색 창 -->
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="검색"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:background="@drawable/search_bg"
                android:textColor="@color/darker_gray"
                android:textColorHint="@color/primary"
                android:inputType="text" />

            <!-- 날짜 선택 토글 -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:checkedButton="@+id/btn_all">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/deep_red"
                    android:textColor="@color/deep_red" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직접선택"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/deep_red"
                    android:textColor="@color/deep_red" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- 날짜 및 기간 표시 -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2025-06-22"
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@color/darker_gray" />

            <TextView
                android:id="@+id/text_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:padding="2dp"
                android:textColor="@color/darker_gray" />

            <!-- 등록된 공고 안내 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등록한 공고"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:textColor="@color/black" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@android:color/darker_gray" />

            <!-- 공고 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_post_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/text_no_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등록된 공고가 없습니다."
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/darker_gray"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
